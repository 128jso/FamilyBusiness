<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    Action Cards-->
<!--    TYPES:-->
<!--    1 = CONTRACT-->
<!--    2 = TAKE IT ON THE LAM-->
<!--    3 = VALENTINE'S DAY MASSACRE-->

    <bean id="card0" class="com.example.familybusiness.ActionCards">
        <property name="cardID" value="0"/>
        <property name="cardName" value="CONTRACT"/>
        <property name="cardDescription" value="Place an opponent's mobster on the Hit List"/>
        <property name="cardFrequency" value="40"/>
    </bean>

    <bean id="card1" class="com.example.familybusiness.ActionCards">
        <property name="cardID" value="1"/>
        <property name="cardName" value="TAKE IT ON THE LAM"/>
        <property name="cardDescription" value="Remove 1 mobster from the Hit List."/>
        <property name="cardFrequency" value="20"/>
    </bean>

    <bean id="card2" class="com.example.familybusiness.ActionCards">
        <property name="cardID" value="2"/>
        <property name="cardName" value="VALENTINE'S DAY MASSACRE"/>
        <property name="cardDescription" value="Execute all mobsters on the Hit List."/>
        <property name="cardFrequency" value="5"/>
    </bean>

</beans>